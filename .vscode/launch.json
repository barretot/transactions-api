{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API com TSX",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect", 
        "./node_modules/.bin/tsx",
        "src/server.ts"
      ],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env", 
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    }
  ]
}
